<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_14dp"
        android:layout_marginTop="@dimen/height_14dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/height_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:background="@drawable/item_selector"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_item_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条目1"
                        android:textColor="@color/blue_44"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_dd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:background="@drawable/item_selector"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_item_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条目2"
                        android:textColor="@color/blue_44"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_dd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:background="@drawable/item_selector"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_item_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textColor="@color/blue_44"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>