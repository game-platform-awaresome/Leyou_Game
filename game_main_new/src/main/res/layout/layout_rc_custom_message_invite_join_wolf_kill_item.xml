<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_invite_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/rc_ic_bubble_right_file"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_9dp"
            android:paddingRight="@dimen/height_9dp"
            android:paddingTop="@dimen/height_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="狼人杀"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_right_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="好友召唤，12人进阶局，点击asdf asdfa sdfasdfasdfasdf进入，一起来玩一局吧！"
                    android:textColor="@color/black_a61"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_right_icon"
                android:layout_width="@dimen/height_50dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="500"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundedCornerRadius="@dimen/height_5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_right_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/height_9dp"
            android:text="就差你了，速来！"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_invite_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rc_ic_bubble_left"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_9dp"
            android:paddingRight="@dimen/height_9dp"
            android:paddingTop="@dimen/height_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="狼人杀"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_left_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="好友召唤，12人进阶局，点击进asdfgrasgasdfasdf入，一起来玩一局吧！"
                    android:textColor="@color/black_a61"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_left_icon"
                android:layout_width="@dimen/height_50dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="500"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundedCornerRadius="@dimen/height_5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_left_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/height_3dp"
            android:paddingLeft="@dimen/height_9dp"
            android:text="就差你了，速来！"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
</RelativeLayout>