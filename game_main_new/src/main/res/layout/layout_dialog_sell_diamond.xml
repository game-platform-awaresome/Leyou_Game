<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_14dp"
    android:layout_marginRight="@dimen/height_14dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_35dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/height_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20dp"
                android:gravity="center"
                android:text="@string/sale_diamond"
                android:textColor="@color/blue_44"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:layout_marginTop="@dimen/height_20dp"
                android:background="@color/white_ea" />

            <EditText
                android:id="@+id/et_sell_diamond_num_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35dp"
                android:layout_marginTop="@dimen/height_15dp"
                android:background="@drawable/et_register_bg"
                android:gravity="center_vertical"
                android:hint="输入要卖出的钻石数量"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="7"
                android:paddingLeft="@dimen/height_15dp"
                android:textColor="@color/blue_44"
                android:textColorHint="@color/black_bb"
                android:textSize="@dimen/text_size_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:layout_marginTop="@dimen/height_15dp"
                android:background="@color/white_ea" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_sell_total_diamond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15dp"
                    android:text="钻石余额:200"
                    android:textColor="@color/green_05"
                    android:textSize="@dimen/text_size_20" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_ea" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_sell_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15dp"
                    android:lines="1"
                    android:text="预计收入:0元"
                    android:textColor="@color/green_05"
                    android:textSize="@dimen/text_size_20" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_ea" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sell_diamond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/item_selector"
                    android:gravity="center"
                    android:text="@string/sure_sale_diamond"
                    android:textColor="@color/blue_44"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_sale_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/height_5dp"
                    android:gravity="center"
                    android:text="@string/sell_diamond_tips"
                    android:textColor="@color/red_f2"
                    android:textSize="@dimen/height_10dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/height_34dp"
        android:layout_height="@dimen/height_34dp"
        android:layout_below="@id/cd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/height_9dp"
        android:layout_marginTop="@dimen/height_9dp"
        android:src="@mipmap/icon_close" />

</RelativeLayout>