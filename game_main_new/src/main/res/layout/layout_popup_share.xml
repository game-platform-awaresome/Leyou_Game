<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_Popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20dp"
                android:text="选择要分享到的平台"
                android:textColor="@color/black_5D"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_item_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/height_5dp"
                    android:paddingLeft="@dimen/height_2dp"
                    android:paddingRight="@dimen/height_2dp"
                    android:paddingTop="@dimen/height_5dp">

                    <ImageView
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:src="@mipmap/icon_share_panda" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:text="@string/friend"
                        android:textColor="@color/black_5D" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/height_5dp"
                    android:paddingLeft="@dimen/height_2dp"
                    android:paddingRight="@dimen/height_2dp"
                    android:paddingTop="@dimen/height_5dp">

                    <ImageView
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:src="@drawable/umeng_socialize_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:text="@string/umeng_socialize_text_qq_key"
                        android:textColor="@color/black_5D" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/height_5dp"
                    android:paddingLeft="@dimen/height_2dp"
                    android:paddingRight="@dimen/height_2dp"
                    android:paddingTop="@dimen/height_5dp">

                    <ImageView
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:src="@drawable/umeng_socialize_wechat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:text="@string/umeng_socialize_text_weixin_key"
                        android:textColor="@color/black_5D" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/height_5dp"
                    android:paddingLeft="@dimen/height_2dp"
                    android:paddingRight="@dimen/height_2dp"
                    android:paddingTop="@dimen/height_5dp">

                    <ImageView
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:src="@drawable/umeng_socialize_wxcircle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:text="@string/umeng_socialize_text_weixin_circle_key"
                        android:textColor="@color/black_5D" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_42dp"
                android:layout_marginTop="@dimen/height_14dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black_5D"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>