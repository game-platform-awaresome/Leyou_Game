<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_change_gradually_shape"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.OrderResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/height_14dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/order_result"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_7dp"
            android:layout_marginLeft="@dimen/height_14dp"
            android:layout_marginRight="@dimen/height_14dp"
            android:layout_marginTop="@dimen/height_14dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/height_10dp"
            app:cardElevation="@dimen/height_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_order_result"
                    android:layout_width="@dimen/height_48dp"
                    android:layout_height="@dimen/height_48dp"
                    android:layout_marginTop="@dimen/height_14dp"
                    android:src="@mipmap/icon_pay_success" />

                <TextView
                    android:id="@+id/tv_order_diamond_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300颗钻石"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:textColor="@color/black_5D"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_pay_money_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:text="19.9元"
                    android:textColor="@color/black_5D"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_pay_tradeNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_14dp"
                    android:layout_marginLeft="@dimen/height_48dp"
                    android:layout_marginRight="@dimen/height_48dp"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:text="订单编号：904jtiggenegwh"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textColor="@color/black_5D"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_7dp"
            android:layout_marginLeft="@dimen/height_14dp"
            android:layout_marginRight="@dimen/height_14dp"
            android:layout_marginTop="@dimen/height_14dp"
            android:background="@drawable/btn_radius_selector"
            android:gravity="center"
            android:text="返回游戏"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/btn_upto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_7dp"
            android:layout_marginLeft="@dimen/height_14dp"
            android:layout_marginRight="@dimen/height_14dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@drawable/btn_radius_selector"
            android:gravity="center"
            android:text="继续充值"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>
</LinearLayout>
