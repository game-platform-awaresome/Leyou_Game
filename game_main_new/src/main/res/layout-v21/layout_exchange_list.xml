<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_item_sell"
        android:layout_width="@dimen/height_100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_7dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/height_10dp"
        app:cardElevation="@dimen/height_5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_diamond"
                android:layout_width="@dimen/height_36dp"
                android:layout_height="@dimen/height_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_13dp"
                android:src="@mipmap/icon_diamond_blue" />

            <TextView
                android:id="@+id/tv_diamond_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_diamond"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_10dp"
                android:text="245"
                android:textColor="@color/blue_44"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_diamond_unit_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_below="@id/tv_diamond_number"
                android:layout_marginTop="@dimen/height_12dp"
                android:background="@drawable/layout_bg_gradually_shape"
                android:gravity="center"
                android:text="0.09元/颗"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
