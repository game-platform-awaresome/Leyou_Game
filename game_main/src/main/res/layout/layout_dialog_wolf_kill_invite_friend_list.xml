<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_42dp"
    android:background="@drawable/item_selector">

    <RelativeLayout
        android:id="@+id/re_game_rank_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_42dp"
        android:layout_marginLeft="@dimen/height_26dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_friend_header_img"
            android:layout_width="@dimen/height_28dp"
            android:layout_height="@dimen/height_28dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="500"
            fresco:failureImage="@mipmap/icon_launcher"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/icon_launcher"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:retryImage="@mipmap/icon_launcher"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundedCornerRadius="@dimen/height_6dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/height_10dp"
        android:layout_toRightOf="@id/re_game_rank_img"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/app_name"
            android:textColor="@color/black_a46"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_invite_friend"
        android:layout_width="@dimen/height_40dp"
        android:layout_height="@dimen/height_25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_26dp"
        android:background="@drawable/btn_bg_treasure_selector"
        android:gravity="center"
        android:text="邀请"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_11" />

</RelativeLayout>