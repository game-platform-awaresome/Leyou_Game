<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_290dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_66dp"
            android:background="@drawable/dialog_top_radius_bg"
            android:gravity="center"
            android:text="创建房间"
            android:textColor="@color/black_15"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_fight_six"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80dp"
            android:layout_marginLeft="@dimen/height_26dp"
            android:layout_marginRight="@dimen/height_26dp"
            android:layout_marginTop="@dimen/height_21dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_fight_six" />

        <ImageView
            android:id="@+id/iv_fight_nine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80dp"
            android:layout_marginLeft="@dimen/height_26dp"
            android:layout_marginRight="@dimen/height_26dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_fight_nine" />

        <ImageView
            android:id="@+id/iv_fight_twelve"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80dp"
            android:layout_marginBottom="@dimen/height_10dp"
            android:layout_marginLeft="@dimen/height_26dp"
            android:layout_marginRight="@dimen/height_26dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_fight_twelve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/height_17dp" />

</LinearLayout>