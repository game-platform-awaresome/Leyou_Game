<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="@dimen/height_20dp">

    <TextView
        android:id="@+id/tv_player_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_10dp"
        android:text="我的身份"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <ImageView
        android:id="@+id/iv_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_player_identity"
        android:layout_marginTop="@dimen/height_15dp"
        android:src="@mipmap/icon_wolf_kill_prop_hunter" />

    <ImageView
        android:id="@+id/iv_known"
        android:layout_width="@dimen/height_130dp"
        android:layout_height="@dimen/height_50dp"
        android:layout_below="@id/iv_identity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@mipmap/icon_wolf_kill_identity_known" />


</RelativeLayout>