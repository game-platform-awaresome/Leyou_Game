<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_invite_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/rc_ic_bubble_right_file"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_9dp"
            android:paddingRight="@dimen/height_9dp"
            android:paddingTop="@dimen/height_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="狼人杀"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5dp"
                    android:maxLines="2"
                    android:text="好友召唤，12人进阶局，点击进入，一起来玩一局吧！"
                    android:textColor="@color/black_a61"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/height_50dp"
                android:layout_height="@dimen/height_50dp"
                android:src="@mipmap/icon_launcher" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/height_9dp"
            android:text="就差你了，速来！"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_invite_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rc_ic_bubble_left"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_9dp"
            android:paddingRight="@dimen/height_9dp"
            android:paddingTop="@dimen/height_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="狼人杀"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5dp"
                    android:maxLines="2"
                    android:text="好友召唤，12人进阶局，点击进入，一起来玩一局吧！"
                    android:textColor="@color/black_a61"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/height_50dp"
                android:layout_height="@dimen/height_50dp"
                android:src="@mipmap/icon_launcher" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/height_3dp"
            android:paddingLeft="@dimen/height_9dp"
            android:text="就差你了，速来！"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
</RelativeLayout>