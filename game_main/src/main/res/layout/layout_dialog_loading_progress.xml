<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="@dimen/height_12dp"
    android:paddingLeft="@dimen/height_20dp"
    android:paddingRight="@dimen/height_20dp"
    android:paddingTop="@dimen/height_12dp">

    <ImageView
        android:id="@+id/iv_loading_progress"
        android:layout_width="@dimen/height_50dp"
        android:layout_height="@dimen/height_50dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/height_5dp"
        android:src="@mipmap/icon_progress" />

    <TextView
        android:id="@+id/tv_loading_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_loading_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_12dp"
        android:text="@string/data_loading"
        android:textColor="@color/black_15"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>