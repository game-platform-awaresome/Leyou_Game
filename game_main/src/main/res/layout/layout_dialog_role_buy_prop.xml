<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_290dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_buy_prop_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_66dp"
            android:background="@drawable/dialog_top_radius_bg"
            android:gravity="center"
            android:text="@string/treasure_prop_buy"
            android:textColor="@color/black_15"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/iv_buy_prop_close"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/height_26dp"
        android:paddingRight="@dimen/height_26dp"
        android:paddingTop="@dimen/height_21dp">

        <TextView
            android:id="@+id/tv_buy_prop_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_des"
            android:textColor="@color/black_a46"
            android:textSize="@dimen/text_size_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/height_75dp"
                android:layout_height="@dimen/height_130dp">

                <ImageView
                    android:id="@+id/iv_prop_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_default" />

                <TextView
                    android:id="@+id/tv_prop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/height_10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_7" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/height_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_minus"
                        android:layout_width="@dimen/height_20dp"
                        android:layout_height="@dimen/height_20dp"
                        android:src="@mipmap/icon_calc_red_minus" />

                    <TextView
                        android:id="@+id/tv_prop_number"
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="@dimen/height_5dp"
                        android:background="@drawable/text_prop_number_bg_shape"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:id="@+id/btn_add"
                        android:layout_width="@dimen/height_20dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="@dimen/height_5dp"
                        android:src="@mipmap/icon_calc_red_add" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_prop_buy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/height_20dp"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/height_20dp"
                        android:layout_height="@dimen/height_13dp"
                        android:src="@mipmap/icon_diamond_ext" />

                    <TextView
                        android:id="@+id/tv_chips_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/height_5dp"
                        android:text="3500"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/height_27dp" />

</LinearLayout>