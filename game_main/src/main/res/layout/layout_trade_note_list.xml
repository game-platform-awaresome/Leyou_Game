<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_55dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_trade_note"
        android:layout_width="@dimen/height_45dp"
        android:layout_height="@dimen/height_30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_12dp"
        android:src="@mipmap/icon_diamond_ext" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_12dp"
        android:layout_toRightOf="@id/iv_trade_note"
        android:gravity="center|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trade_note_diamond_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25钻石"
            android:textColor="@color/black_15"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_trade_note_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_6dp"
            android:text="交易时间：2017-04-26"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_12dp"
        android:gravity="center|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trade_note_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥19.9"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_trade_note_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_6dp"
            android:text="交易成功"
            android:textColor="@color/black_a61"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

</RelativeLayout>