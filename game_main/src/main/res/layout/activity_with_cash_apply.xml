<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.mine.WithCashApplyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_cash_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:padding="@dimen/height_15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_cash_back"
            android:text="@string/with_cash_apply"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_57dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_card_icon"
                android:layout_width="@dimen/height_43dp"
                android:layout_height="@dimen/height_43dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_12dp"
                android:src="@mipmap/icon_bank_card" />

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_9dp"
                android:layout_marginTop="@dimen/height_12dp"
                android:layout_toRightOf="@id/iv_card_icon"
                android:text="中国银行"
                android:textColor="@color/black_15"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_9dp"
                android:layout_toRightOf="@id/iv_card_icon"
                android:text="尾号7843储蓄卡"
                android:textColor="@color/black_15"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_un_bind_card"
                android:layout_width="@dimen/height_60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_12dp"
                android:background="@drawable/btn_bg_red_selector"
                android:gravity="center"
                android:padding="@dimen/height_6dp"
                android:text="@string/with_cash_un_band_card"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp"
            android:paddingTop="@dimen/height_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/with_cash_money_tips"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_23dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="¥"
                    android:textColor="@color/black_a46"
                    android:textSize="@dimen/text_size_30" />

                <EditText
                    android:id="@+id/et_with_cash_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5dp"
                    android:background="@drawable/et_input_shape"
                    android:hint="@string/with_cash_money_hint"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:imeOptions="actionDone"
                    android:maxLength="19"
                    android:singleLine="true"
                    android:textColor="@color/black_a46"
                    android:textColorHint="@color/black_bb"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/height_15dp"
                android:background="@color/white_e9" />

            <TextView
                android:id="@+id/tv_current_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10dp"
                android:text="当前余额 789.09元"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_with_cash_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_42dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/height_12dp"
                android:layout_marginLeft="@dimen/height_12dp"
                android:layout_marginRight="@dimen/height_12dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_treasure_selector"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
