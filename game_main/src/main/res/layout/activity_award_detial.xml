<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.mine.AwardDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_detail_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:padding="@dimen/height_15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_detail_back"
            android:text="@string/mine_win_result_award_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_65dp"
            android:layout_marginTop="@dimen/height_6dp"
            android:background="@drawable/item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp">

            <ImageView
                android:id="@+id/iv_award_img"
                android:layout_width="@dimen/height_45dp"
                android:layout_height="@dimen/height_45dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginLeft="@dimen/height_10dp"
                android:layout_marginRight="@dimen/height_6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_award_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王者荣耀    一等奖"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_award_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="iPhone 7 Plus 128G全网通4G手机一部，iPhone 7 Plus 128G全网通4G手机一部"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_award_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="获奖时间：2017-06-15"
                    android:textColor="@color/black_a61"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_6dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/with_cash_name"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/et_address_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_60dp"
                android:background="@drawable/et_input_shape"
                android:gravity="center_vertical"
                android:hint="收件人姓名"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/black_a46"
                android:textColorHint="@color/black_bb"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/person_phone_number"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/et_address_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_60dp"
                android:background="@drawable/et_input_shape"
                android:hint="收货人联系方式"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:textColor="@color/black_a46"
                android:textColorHint="@color/black_bb"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/award_mail"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/et_address_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_60dp"
                android:background="@drawable/et_input_shape"
                android:hint="@string/award_mail_hint"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/black_a46"
                android:textColorHint="@color/black_bb"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_prize_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/award_address"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/et_address_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_60dp"
                android:background="@drawable/et_input_shape"
                android:hint="@string/award_address_hint"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/black_a46"
                android:textColorHint="@color/black_bb"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_express_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/award_courier_company"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_express_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_60dp"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_express_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/height_12dp"
            android:paddingRight="@dimen/height_12dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="@dimen/height_58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/award_express_no"
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_express_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_60dp"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/black_a46"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_address_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_42dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/height_20dp"
                android:layout_marginLeft="@dimen/height_12dp"
                android:layout_marginRight="@dimen/height_12dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_treasure_selector"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
