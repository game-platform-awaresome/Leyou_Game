<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.OrderPayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_order_pay_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:padding="@dimen/height_15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_order_pay_back"
            android:text="@string/order_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_66dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_order_pay_diamond"
                android:layout_width="@dimen/height_45dp"
                android:layout_height="@dimen/height_30dp"
                android:layout_marginLeft="@dimen/height_12dp"
                android:src="@mipmap/icon_diamond_ext" />

            <LinearLayout
                android:id="@+id/ll_order_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_25dp"
                android:layout_toRightOf="@id/iv_order_pay_diamond"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ¥ "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_pay_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_order_pay_money"
                android:layout_marginLeft="@dimen/height_25dp"
                android:layout_marginTop="@dimen/height_4dp"
                android:layout_toRightOf="@id/iv_order_pay_diamond"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_pay_sale_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25钻石"
                    android:textColor="@color/red_f2"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_pay_yue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_yue"
                android:layout_width="@dimen/height_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_12dp"
                android:src="@mipmap/icon_balance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_12dp"
                android:layout_toRightOf="@id/iv_yue"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额支付"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_yue_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_2dp"
                    android:text="账户余额 100.9元"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/text_size_9" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_yue"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_12dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_pay_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="@dimen/height_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_12dp"
                android:src="@mipmap/icon_alipay" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_12dp"
                android:layout_toRightOf="@id/iv_alipay"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_2dp"
                    android:text="推荐有支付宝账号的用户使用"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/text_size_9" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_alipay"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_12dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_pay_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_wxpay"
                android:layout_width="@dimen/height_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height_12dp"
                android:src="@mipmap/icon_wxpay" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_12dp"
                android:layout_toRightOf="@id/iv_wxpay"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wxpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_2dp"
                    android:text="推荐安装微信5.0及以上的用户使用"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/text_size_9" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_wxpay"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_12dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="@dimen/height_260dp"
                android:layout_height="@dimen/height_42dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_26dp"
                android:background="@drawable/btn_register_selector"
                android:gravity="center"
                android:text="确认支付  ¥ 19.9"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
