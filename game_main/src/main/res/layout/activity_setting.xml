<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.mine.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:padding="@dimen/height_15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_setting_back"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/height_12dp">

                <ImageView
                    android:layout_width="@dimen/height_21dp"
                    android:layout_height="@dimen/height_21dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_12dp"
                    android:text="@string/mine_feedback"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_1dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/height_12dp">

                <ImageView
                    android:layout_width="@dimen/height_21dp"
                    android:layout_height="@dimen/height_21dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_12dp"
                    android:text="@string/mine_about"
                    android:textColor="@color/black_0b"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42dp"
            android:layout_marginTop="@dimen/height_7dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_logIn_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/mine_exit"
                    android:textColor="@color/red_f2"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
