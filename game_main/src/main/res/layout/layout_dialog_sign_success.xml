<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sign_diamond"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:src="@mipmap/icon_diamond_ext" />

        <TextView
            android:id="@+id/tv_diamond_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_10dp"
            android:text="+10"
            android:textColor="@color/gold"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_box_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_number"
        android:src="@mipmap/icon_sign_box_off" />


</RelativeLayout>