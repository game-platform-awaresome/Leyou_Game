<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_prop_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/height_5dp"
    android:layout_marginLeft="@dimen/height_4dp"
    android:layout_marginRight="@dimen/height_4dp"
    android:layout_marginBottom="@dimen/height_5dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_image"
        android:layout_width="@dimen/height_75dp"
        android:layout_height="@dimen/height_125dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_prop_img"
            android:layout_width="@dimen/height_75dp"
            android:layout_height="@dimen/height_125dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_worker_prop_un_selector" />

        <TextView
            android:id="@+id/tv_prop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_15dp"
            android:text="@string/app_name"
            android:textColor="@color/black_12"
            android:textSize="@dimen/text_size_9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/height_72dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_below="@id/re_image"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/icon_prop_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/height_4dp"
            android:text="æŠ¢"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_9" />
    </RelativeLayout>

</RelativeLayout>