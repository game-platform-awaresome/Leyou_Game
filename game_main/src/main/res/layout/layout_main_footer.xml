<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_62dp"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/re_bar_treasury"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_weight="1"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/split_color" />

            <ImageView
                android:id="@+id/iv_bar_treasury"
                android:layout_width="@dimen/height_25dp"
                android:layout_height="@dimen/height_25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_7dp"
                android:src="@drawable/bar_treasury_selector" />

            <TextView
                android:id="@+id/tv_bar_treasury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bar_treasury"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_3dp"
                android:text="@string/treasury"
                android:textColor="@drawable/bar_text_selector"
                android:textSize="@dimen/text_size_10" />

            <com.leyou.game.widget.DragPointView
                android:id="@+id/tv_treasure_tips_number"
                android:layout_width="@dimen/height_17dp"
                android:layout_height="@dimen/height_17dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/height_17dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_bar_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_weight="1"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/split_color" />

            <ImageView
                android:id="@+id/iv_bar_friend"
                android:layout_width="@dimen/height_25dp"
                android:layout_height="@dimen/height_25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_7dp"
                android:src="@drawable/bar_friend_selector" />

            <TextView
                android:id="@+id/tv_bar_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bar_friend"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_3dp"
                android:text="@string/friend"
                android:textColor="@drawable/bar_text_selector"
                android:textSize="@dimen/text_size_10" />

            <com.leyou.game.widget.DragPointView
                android:id="@+id/tv_friend_tips_number"
                android:layout_width="@dimen/height_17dp"
                android:layout_height="@dimen/height_17dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/height_17dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_bar_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/height_10dp"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:background="@color/split_color" />

            <ImageView
                android:id="@+id/iv_bar_win"
                android:layout_width="@dimen/height_80dp"
                android:layout_height="@dimen/height_44dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bar_win_selector" />

            <TextView
                android:id="@+id/tv_bar_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bar_win"
                android:layout_marginTop="@dimen/height_1dp"
                android:layout_centerHorizontal="true"
                android:text="@string/winAward"
                android:textColor="@drawable/bar_text_selector"
                android:textSize="@dimen/text_size_10" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_bar_fight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_weight="1"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/split_color" />

            <ImageView
                android:id="@+id/iv_bar_fight"
                android:layout_width="@dimen/height_25dp"
                android:layout_height="@dimen/height_25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_7dp"
                android:src="@drawable/bar_fight_selector" />

            <TextView
                android:id="@+id/tv_bar_fight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bar_fight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_3dp"
                android:text="@string/fight"
                android:textColor="@drawable/bar_text_selector"
                android:textSize="@dimen/text_size_10" />

            <com.leyou.game.widget.DragPointView
                android:id="@+id/tv_fight_tips_number"
                android:layout_width="@dimen/height_17dp"
                android:layout_height="@dimen/height_17dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/height_17dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_bar_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_weight="1"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/split_color" />

            <ImageView
                android:id="@+id/iv_bar_mine"
                android:layout_width="@dimen/height_25dp"
                android:layout_height="@dimen/height_25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_7dp"
                android:src="@drawable/bar_mine_selector" />

            <TextView
                android:id="@+id/tv_bar_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bar_mine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_3dp"
                android:text="@string/mine"
                android:textColor="@drawable/bar_text_selector"
                android:textSize="@dimen/text_size_10" />

            <com.leyou.game.widget.DragPointView
                android:id="@+id/tv_mine_tips_number"
                android:layout_width="@dimen/height_17dp"
                android:layout_height="@dimen/height_17dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/height_17dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>