<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/re_invite_right"
        android:layout_width="@dimen/height_260dp"
        android:layout_height="@dimen/height_120dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/icon_bg_from_hongbao"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_30dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_invite_left"
        android:layout_width="@dimen/height_260dp"
        android:layout_height="@dimen/height_120dp"
        android:layout_alignParentTop="true"
        android:background="@mipmap/icon_bg_to_hongbao"
        android:orientation="vertical"
        android:padding="@dimen/height_5dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_30dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>