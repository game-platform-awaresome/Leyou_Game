<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_10dp"
        android:layout_marginLeft="@dimen/height_10dp"
        android:layout_marginRight="@dimen/height_7dp"
        android:layout_marginTop="@dimen/height_5dp"
        android:background="@color/transparent"
        app:cardCornerRadius="@dimen/height_7dp"
        app:cardElevation="@dimen/height_5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="@dimen/height_150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_add_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_23dp"
                    android:layout_height="@dimen/height_23dp"
                    android:layout_marginLeft="14dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_friend_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/height_14dp"
                    android:text="@string/friend_add_friend"
                    android:textColor="@color/blue_44"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_f5" />

            <LinearLayout
                android:id="@+id/layout_add_crowd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_23dp"
                    android:layout_height="@dimen/height_23dp"
                    android:layout_marginLeft="14dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_friend_find_crowd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/height_14dp"
                    android:text="@string/friend_add_crowd"
                    android:textColor="@color/blue_44"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_f5" />

            <LinearLayout
                android:id="@+id/layout_create_crowd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_23dp"
                    android:layout_height="@dimen/height_23dp"
                    android:layout_marginLeft="14dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_friend_create_crowd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/height_14dp"
                    android:text="@string/friend_create_crowd"
                    android:textColor="@color/blue_44"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>