<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ll_bg_game"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_14dp"
    android:paddingTop="@dimen/height_14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已匹配到的通讯录好友"
        android:gravity="center"
        android:textColor="@color/blue_44"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:layout_marginTop="@dimen/height_14dp"
        android:background="@color/white_1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_ignore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_35dp"
        android:layout_marginLeft="@dimen/height_14dp"
        android:layout_marginRight="@dimen/height_14dp"
        android:layout_marginTop="@dimen/height_14dp"
        android:background="@drawable/btn_bg_red_selector"
        android:gravity="center"
        android:text="@string/ignore"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />
</LinearLayout>