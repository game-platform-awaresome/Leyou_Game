<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_win_result_head"
        android:layout_width="@dimen/height_40dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_15dp"
        android:background="@color/transparent"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="500"
        fresco:failureImage="@mipmap/icon_not_login"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/icon_not_login"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@mipmap/icon_not_login"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundAsCircle="false"
        fresco:roundedCornerRadius="@dimen/height_10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_11dp"
        android:layout_toRightOf="@id/iv_win_result_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_win_result_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏玩家"
            android:textColor="@color/blue_44"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_win_result_prize_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_7dp"
            android:text="奖品:手机一部 价值：7188元"
            android:textColor="@color/black_5D"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_win_result_rank"
        android:layout_width="@dimen/height_23dp"
        android:layout_height="@dimen/height_33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_15dp"
        android:background="@mipmap/icon_first_rank" />

    <TextView
        android:id="@+id/tv_win_result_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_15dp"
        android:text="四等奖"
        android:textColor="@color/black_a46"
        android:textSize="@dimen/text_size_14" />
</RelativeLayout>