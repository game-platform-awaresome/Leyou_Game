<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_game_screen_shot"
        android:layout_width="@dimen/height_254dp"
        android:layout_height="@dimen/height_145dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/height_15dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        app:actualImageScaleType="focusCrop"
        app:failureImage="@mipmap/icon_default_big"
        app:failureImageScaleType="fitXY"
        app:placeholderImage="@mipmap/icon_default_big"
        app:placeholderImageScaleType="fitXY"
        app:retryImage="@mipmap/icon_default_big"
        app:retryImageScaleType="fitXY"
        app:roundAsCircle="false"
        app:roundedCornerRadius="@dimen/height_10dp" />
</RelativeLayout>