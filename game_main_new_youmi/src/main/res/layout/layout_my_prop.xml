<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_my_prop_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_6dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/height_105dp"
        android:layout_height="@dimen/height_180dp"
        android:background="@drawable/item_selector">

        <ImageView
            android:id="@+id/iv_prop_img"
            android:layout_width="@dimen/height_105dp"
            android:layout_height="@dimen/height_180dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_prop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/height_105dp"
        android:layout_height="@dimen/height_25dp"
        android:background="@mipmap/icon_prop_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_prop_use"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>