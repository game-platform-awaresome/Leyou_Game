<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ll_bg_game"
    android:orientation="vertical"
    android:padding="@dimen/height_14dp">

    <RelativeLayout
        android:id="@+id/ll_root"
        android:layout_width="@dimen/height_254dp"
        android:layout_height="@dimen/height_380dp"
        android:background="@mipmap/icon_with_cash_share_bg">

        <LinearLayout
            android:id="@+id/ll_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/height_60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_header"
                android:layout_width="@dimen/height_33dp"
                android:layout_height="@dimen/height_33dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10dp"
                android:text="@string/app_name"
                android:textColor="@color/red_f2"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/height_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刚刚提现"
                android:textColor="@color/red_f2"
                android:textSize="@dimen/text_size_24"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/height_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1元"
                android:textColor="@color/red_f2"
                android:textSize="@dimen/text_size_50"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_30dp"
            android:background="@drawable/ll_bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10dp"
                android:gravity="center"
                android:text="长按识别二维码\n一起来赚钱"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="@dimen/height_60dp"
                android:layout_height="@dimen/height_60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/height_14dp"
                android:src="@mipmap/icon_share_erweima" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/blue_44"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/blue_44"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>