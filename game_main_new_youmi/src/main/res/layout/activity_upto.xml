<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_change_gradually_shape"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.mine.UptoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/height_14dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mine_chongzhi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cd_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60dp"
            android:layout_marginBottom="@dimen/height_7dp"
            android:layout_marginLeft="@dimen/height_14dp"
            android:layout_marginRight="@dimen/height_14dp"
            android:layout_marginTop="@dimen/height_20dp"
            android:background="@drawable/cv_radius_bg_selector"
            app:cardCornerRadius="@dimen/height_10dp"
            app:cardElevation="@dimen/height_3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_23dp"
                    android:layout_height="@dimen/height_20dp"
                    android:layout_marginLeft="@dimen/height_15dp"
                    android:src="@mipmap/icon_diamond_blue" />

                <EditText
                    android:id="@+id/et_diamond_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/height_15dp"
                    android:layout_marginRight="@dimen/height_15dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_input_shape"
                    android:hint="要购买的钻石数"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/black_5D"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/height_15dp"
                    android:text="0.00元"
                    android:textColor="@color/black_5D"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/cd_100"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:layout_marginBottom="@dimen/height_7dp"
                    android:layout_marginLeft="@dimen/height_14dp"
                    android:layout_marginRight="@dimen/height_7dp"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:background="@drawable/cv_radius_bg_selector"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/height_10dp"
                    app:cardElevation="@dimen/height_3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/height_23dp"
                            android:layout_height="@dimen/height_20dp"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:src="@mipmap/icon_diamond_blue" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:text="100"
                            android:textColor="@color/blue_44"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/cd_300"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:layout_marginBottom="@dimen/height_7dp"
                    android:layout_marginLeft="@dimen/height_7dp"
                    android:layout_marginRight="@dimen/height_14dp"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:background="@drawable/cv_radius_bg_selector"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/height_10dp"
                    app:cardElevation="@dimen/height_3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/height_23dp"
                            android:layout_height="@dimen/height_20dp"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:src="@mipmap/icon_diamond_blue" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:text="300"
                            android:textColor="@color/blue_44"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/cd_500"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:layout_marginBottom="@dimen/height_7dp"
                    android:layout_marginLeft="@dimen/height_14dp"
                    android:layout_marginRight="@dimen/height_7dp"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:background="@drawable/cv_radius_bg_selector"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/height_10dp"
                    app:cardElevation="@dimen/height_3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/height_23dp"
                            android:layout_height="@dimen/height_20dp"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:src="@mipmap/icon_diamond_blue" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:text="500"
                            android:textColor="@color/blue_44"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/cd_700"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:layout_marginBottom="@dimen/height_7dp"
                    android:layout_marginLeft="@dimen/height_7dp"
                    android:layout_marginRight="@dimen/height_14dp"
                    android:layout_marginTop="@dimen/height_7dp"
                    android:background="@drawable/cv_radius_bg_selector"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/height_10dp"
                    app:cardElevation="@dimen/height_3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/height_23dp"
                            android:layout_height="@dimen/height_20dp"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:src="@mipmap/icon_diamond_blue" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:text="700"
                            android:textColor="@color/blue_44"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_upto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60dp"
            android:layout_marginLeft="@dimen/height_14dp"
            android:layout_marginRight="@dimen/height_14dp"
            android:layout_marginTop="@dimen/height_30dp"
            android:background="@drawable/btn_radius_selector"
            android:text="@string/sure_buy_diamond"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
</LinearLayout>
