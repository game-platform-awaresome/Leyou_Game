<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_change_gradually_shape"
    android:orientation="vertical"
    tools:context="com.leyou.game.activity.mine.ModifyUserInfoActivity">

    <RelativeLayout
        android:id="@+id/re_modify_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginTop="@dimen/padding_top">

        <ImageView
            android:id="@+id/iv_person_back"
            android:layout_width="@dimen/height_48dp"
            android:layout_height="@dimen/height_48dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/height_14dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mine_person_info"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_7dp"
                android:layout_marginLeft="@dimen/height_14dp"
                android:layout_marginRight="@dimen/height_14dp"
                android:layout_marginTop="@dimen/height_14dp"
                fresco:cardBackgroundColor="@color/blue_00"
                fresco:cardCornerRadius="@dimen/height_10dp"
                fresco:cardElevation="@dimen/height_1dp"
                fresco:cardPreventCornerOverlap="true"
                fresco:cardUseCompatPadding="false">

                <LinearLayout
                    android:id="@+id/ll_card_un_band"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_180dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_45dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:background="@color/blue_1b"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_add_card"
                            android:layout_width="@dimen/height_45dp"
                            android:layout_height="@dimen/height_45dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:src="@mipmap/icon_bank_card_add" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:layout_marginLeft="@dimen/height_40dp"
                        android:layout_marginRight="@dimen/height_40dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/height_25dp"
                            android:layout_height="@dimen/height_5dp"
                            android:background="@color/blue_44" />

                        <View
                            android:layout_width="@dimen/height_40dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:background="@color/blue_44" />

                        <View
                            android:layout_width="@dimen/height_45dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:layout_marginRight="@dimen/height_10dp"
                            android:background="@color/blue_44" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_5dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/height_43dp"
                            android:layout_height="@dimen/height_5dp"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="@dimen/height_43dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="@dimen/height_43dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="@dimen/height_43dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:background="@color/blue_0d" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_card_band"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_180dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_45dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:background="@color/blue_1b"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_card_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_40dp"
                            android:ellipsize="end"
                            android:maxLength="6"
                            android:text="建设银行"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_30"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_14dp"
                            android:background="@drawable/btn_bg_red_selector"
                            android:paddingBottom="@dimen/height_5dp"
                            android:paddingLeft="@dimen/height_15dp"
                            android:paddingRight="@dimen/height_15dp"
                            android:paddingTop="@dimen/height_5dp"
                            android:text="@string/with_cash_un_band_card"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:layout_marginLeft="@dimen/height_40dp"
                        android:layout_marginRight="@dimen/height_40dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_card_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_25dp"
                            android:text="378103947*****9876"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_5dp"
                        android:layout_marginLeft="@dimen/height_40dp"
                        android:layout_marginRight="@dimen/height_40dp"
                        android:layout_marginTop="@dimen/height_26dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_weight="1"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:layout_weight="1"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:layout_weight="1"
                            android:background="@color/blue_0d" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_5dp"
                            android:layout_marginLeft="@dimen/height_8dp"
                            android:layout_weight="1"
                            android:background="@color/blue_0d" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_7dp"
                android:layout_marginLeft="@dimen/height_14dp"
                android:layout_marginRight="@dimen/height_14dp"
                android:layout_marginTop="@dimen/height_7dp"
                fresco:cardCornerRadius="@dimen/height_10dp"
                fresco:cardElevation="@dimen/height_5dp"
                fresco:cardPreventCornerOverlap="true"
                fresco:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/re_person_modify_header_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:text="@string/person_head_img"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_14" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/iv_modify_header_img"
                            android:layout_width="@dimen/height_35dp"
                            android:layout_height="@dimen/height_35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_40dp"
                            android:background="@color/transparent"
                            fresco:actualImageScaleType="focusCrop"
                            fresco:fadeDuration="500"
                            fresco:failureImage="@mipmap/icon_not_login"
                            fresco:failureImageScaleType="centerCrop"
                            fresco:placeholderImage="@mipmap/icon_not_login"
                            fresco:placeholderImageScaleType="centerCrop"
                            fresco:retryImage="@mipmap/icon_not_login"
                            fresco:retryImageScaleType="centerCrop"
                            fresco:roundAsCircle="true"
                            fresco:roundingBorderColor="@color/gray_dcdcdc"
                            fresco:roundingBorderWidth="@dimen/height_2dp" />

                        <ImageView
                            android:layout_width="@dimen/height_7dp"
                            android:layout_height="@dimen/height_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:src="@mipmap/icon_arrow_right_gray" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1dp"
                        android:background="@color/white_dd" />

                    <RelativeLayout
                        android:id="@+id/re_person_modify_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:text="@string/person_nick_name"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_modify_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_40dp"
                            android:text="@string/app_name"
                            android:textColor="@color/white_ba"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="@dimen/height_7dp"
                            android:layout_height="@dimen/height_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:src="@mipmap/icon_arrow_right_gray" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1dp"
                        android:background="@color/white_dd" />

                    <RelativeLayout
                        android:id="@+id/re_person_modify_year"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:text="@string/person_year"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_modify_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_40dp"
                            android:text="1993-9-17"
                            android:textColor="@color/white_ba"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="@dimen/height_7dp"
                            android:layout_height="@dimen/height_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:src="@mipmap/icon_arrow_right_gray" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1dp"
                        android:background="@color/white_dd" />

                    <RelativeLayout
                        android:id="@+id/re_person_modify_sex"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:text="@string/person_sex"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_modify_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_40dp"
                            android:text="男"
                            android:textColor="@color/white_ba"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="@dimen/height_7dp"
                            android:layout_height="@dimen/height_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:src="@mipmap/icon_arrow_right_gray" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1dp"
                        android:background="@color/white_dd" />

                    <RelativeLayout
                        android:id="@+id/re_person_modify_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/height_15dp"
                            android:text="@string/person_phone_number"
                            android:textColor="@color/black_5D"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_modify_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_40dp"
                            android:text="18812345678"
                            android:textColor="@color/white_ba"
                            android:textSize="@dimen/text_size_13"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="@dimen/height_7dp"
                            android:layout_height="@dimen/height_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/height_15dp"
                            android:src="@mipmap/icon_arrow_right_gray" />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
