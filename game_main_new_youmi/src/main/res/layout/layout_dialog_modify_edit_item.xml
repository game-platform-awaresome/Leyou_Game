<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_14dp"
        android:layout_marginTop="@dimen/height_14dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/height_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条目1"
                    android:textColor="@color/blue_44"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_dd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_item_edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:background="@drawable/item_selector"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/ed_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_input_shape"
                        android:hint="内容不能为空"
                        android:imeOptions="actionDone"
                        android:maxLength="8"
                        android:paddingLeft="@dimen/height_20dp"
                        android:singleLine="true"
                        android:textColor="@color/green_05"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/white_dd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_item_done"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60dp"
                    android:background="@drawable/item_selector"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_item_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/finish"
                        android:textColor="@color/blue_44"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>