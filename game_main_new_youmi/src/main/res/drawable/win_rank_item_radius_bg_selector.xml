<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/height_10dp" />
            <gradient android:endColor="@color/purple_74" android:startColor="@color/blue_44" />
            <stroke android:width="@dimen/height_1dp" android:color="@color/black" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/height_10dp" />
            <solid android:color="@color/white_ea" />
        </shape>
    </item>

</selector>